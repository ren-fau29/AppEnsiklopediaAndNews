<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <ImageView
                android:id="@+id/Image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/game_image"/>

            <TextView
                android:id="@+id/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textStyle="italic"
                tools:ignore="HardcodedText"/>
            <TextView
                android:id="@+id/detailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genre"
                android:textStyle="italic"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spesifikasi Minimum"
                android:textStyle="italic"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/detailCPU_mi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:drawableStart="@drawable/baseline_computer_24"
                tools:ignore="UseCompatTextViewDrawableXml" />
            <TextView
                android:id="@+id/detailVGA_mi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:drawableStart="@drawable/baseline_videogame_asset_24"
                tools:ignore="UseCompatTextViewDrawableXml" />
            <TextView
                android:id="@+id/detailRAM_mi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:drawableStart="@drawable/baseline_memory_24"
                tools:ignore="UseCompatTextViewDrawableXml" />
            <TextView
                android:id="@+id/detailStorage_mi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:drawableStart="@drawable/baseline_storage_24"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spesifikasi Rekomended"
                android:textStyle="italic"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/detailCPU_Re"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:drawableStart="@drawable/baseline_computer_24"
                tools:ignore="UseCompatTextViewDrawableXml" />
            <TextView
                android:id="@+id/detailVGA_Re"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:drawableStart="@drawable/baseline_videogame_asset_24"
                tools:ignore="UseCompatTextViewDrawableXml" />
            <TextView
                android:id="@+id/detailRAM_Re"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:drawableStart="@drawable/baseline_memory_24"
                tools:ignore="UseCompatTextViewDrawableXml" />
            <TextView
                android:id="@+id/detailStorage_Re"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:drawableStart="@drawable/baseline_storage_24"
                tools:ignore="UseCompatTextViewDrawableXml" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy a Game"
                android:textStyle="italic"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/detailNewsUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold"
                android:autoLink="web" />

        </LinearLayout>



    </ScrollView>

<!--    <androidx.viewpager2.widget.ViewPager2-->
<!--        android:id="@+id/viewPager"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="200dp"-->
<!--        android:layout_gravity="center"/>-->


</LinearLayout>
